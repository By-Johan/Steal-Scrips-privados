-- LocalScript: InfernoPanel.lua
-- Uso legÃ­timo: solo interfaz, sin exploits.
local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer
local playerGui = localPlayer:WaitForChild("PlayerGui")

-- GUI principal
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "InfernoPanelUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 360, 0, 200)
mainFrame.Position = UDim2.new(0, 16, 0, 16)
mainFrame.BackgroundColor3 = Color3.fromRGB(28,28,28)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

local uiCorner = Instance.new("UICorner", mainFrame)
uiCorner.CornerRadius = UDim.new(0, 8)

-- ðŸ”¥ TÃ­tulo
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -80, 0, 28)
title.Position = UDim2.new(0, 10, 0, 8)
title.BackgroundTransparency = 1
title.Text = "INFERNO PANEL"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255, 0, 0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = mainFrame

-- Minimizar botÃ³n
local minimizeBtn = Instance.new("TextButton")
minimizeBtn.Size = UDim2.new(0, 28, 0, 28)
minimizeBtn.Position = UDim2.new(1, -38, 0, 8)
minimizeBtn.Text = "-"
minimizeBtn.Font = Enum.Font.GothamBold
minimizeBtn.TextSize = 20
minimizeBtn.BackgroundColor3 = Color3.fromRGB(60,60,60)
minimizeBtn.TextColor3 = Color3.fromRGB(255,255,255)
minimizeBtn.Parent = mainFrame
local btnCorner = Instance.new("UICorner", minimizeBtn)
btnCorner.CornerRadius = UDim.new(0,6)

-- Bloquear posiciÃ³n
local lockToggle = Instance.new("TextButton")
lockToggle.Size = UDim2.new(0, 80, 0, 24)
lockToggle.Position = UDim2.new(1, -92, 0, 44)
lockToggle.Text = "ðŸ”“ Unlock"
lockToggle.Font = Enum.Font.Gotham
lockToggle.TextSize = 14
lockToggle.BackgroundColor3 = Color3.fromRGB(70,70,70)
lockToggle.TextColor3 = Color3.fromRGB(255,255,255)
lockToggle.Parent = mainFrame
local lockCorner = Instance.new("UICorner", lockToggle)
lockCorner.CornerRadius = UDim.new(0,6)

local locked = false
lockToggle.MouseButton1Click:Connect(function()
    locked = not locked
    mainFrame.Draggable = not locked
    lockToggle.Text = locked and "ðŸ”’ Locked" or "ðŸ”“ Unlock"
    lockToggle.BackgroundColor3 = locked and Color3.fromRGB(150,60,60) or Color3.fromRGB(70,70,70)
end)

-- Contenedor interior
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -20, 1, -70)
contentFrame.Position = UDim2.new(0, 10, 0, 70)
contentFrame.BackgroundTransparency = 1
contentFrame.Parent = mainFrame

local infoLabel = Instance.new("TextLabel")
infoLabel.Size = UDim2.new(1, 0, 1, 0)
infoLabel.BackgroundTransparency = 1
infoLabel.Font = Enum.Font.Gotham
infoLabel.TextSize = 14
infoLabel.TextColor3 = Color3.fromRGB(220,220,220)
infoLabel.TextWrapped = true
infoLabel.Text = "ðŸ”¸ Panel de desarrollo seguro.\nPuedes usar este espacio para mostrar datos, logs o herramientas de moderaciÃ³n internas.\n\nEl botÃ³n '-' minimiza el panel.\nEl botÃ³n 'Lock' bloquea o desbloquea la posiciÃ³n de la ventana."
infoLabel.Parent = contentFrame

-- Minimizar/expandir comportamiento
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        contentFrame.Visible = false
        mainFrame.Size = UDim2.new(0, 360, 0, 44)
        minimizeBtn.Text = "+"
    else
        contentFrame.Visible = true
        mainFrame.Size = UDim2.new(0, 360, 0, 200)
        minimizeBtn.Text = "-"
    end
end)

-- Mensaje inicial
print("âœ… INFERNO PANEL cargado correctamente (modo seguro).")
